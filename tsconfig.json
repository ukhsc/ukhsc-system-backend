{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "src",
    "paths": {
      "@config/*": [
        "config/*"
      ],
      "@endpoints/*": [
        "endpoints/*"
      ],
      "@services/*": [
        "services/*"
      ],
      "@tests/*": [
        "../tests/*"
      ],
      "@test-helpers/*": [
        "../tests/helpers/*"
      ]
    },
    "declaration": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "inlineSourceMap": false,
    "lib": [
      "esnext"
    ],
    "listEmittedFiles": false,
    "listFiles": false,
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "pretty": true,
    "resolveJsonModule": true,
    "rootDir": ".",
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": true,
    "traceResolution": false,
    "outDir": "dist",
    "target": "esnext",
    "module": "esnext"
  },
  "exclude": [
    "node_modules",
    "dist"
  ],
  "include": [
    "src",
    "tests",
    "prisma/schema/generated/zod",
    "prisma/seed.ts",
    "node_modules/.prisma/client",
    "tsup.config.ts",
    "vitest.config.ts"
  ]
}