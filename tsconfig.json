{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "src",
    "paths": {
      "@config/*": ["config/*"]
    },
    "declaration": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "inlineSourceMap": false,
    "lib": ["esnext"],
    "listEmittedFiles": false,
    "listFiles": false,
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "pretty": true,
    "resolveJsonModule": true,
    "rootDir": ".",
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": true,
    "traceResolution": false,
    "outDir": "",
    "target": "esnext",
    "module": "esnext"
  },
  "exclude": ["node_modules", "dist", "tests"],
  "include": ["src", "prisma/schema/generated/zod", "node_modules/.prisma/client"]
}
